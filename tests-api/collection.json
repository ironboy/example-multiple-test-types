		{
			"name": "Get Products",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const products = pm.response.json();",
							"",
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response is an array', function () {",
							"    pm.expect(products).to.be.an('array');",
							"});",
							"",
							"pm.test('Products have required fields', function () {",
							"    for(let product of products){",
							"        pm.expect(product).to.have.property('id');",
							"        pm.expect(product).to.have.property('name');",
							"        pm.expect(product).to.have.property('price$');",
							"    }",
							"});",
							"",
							"pm.test('All products have prices that are not below 0', function(){",
							"  for(let product of products){",
							"    pm.expect(product.price$).to.not.be.below(0);",
							"  }",
							"});",
							"",
							"pm.test('All products have prices below 1000', function(){",
							"  for(let product of products){",
							"    pm.expect(product.price$).to.be.below(1000);",
							"  }",
							"});",
							"",
							"// Add all products as a collection variable ",
							"// that can be read from other request in the same collection",
							"pm.collectionVariables.set('products', products);",
							""
						],
						"type": "text/javascript",
