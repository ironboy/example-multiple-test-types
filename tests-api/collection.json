		{
			"name": "Get Single Product",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Always tricky to run timing test in GitHub Workflows etc. ",
							"// because if there is a heavy on GitHub's servers",
							"// the test might fail for no good reason",
							"/*pm.test('Check that response time is below 1000ms', function(){",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"})*/",
							"",
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Product has the correct id', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.id).to.equal(pm.environment.get('id'));",
							"});",
							"",
							"// Loop this request by removing one product from products ",
							"// and continuing to call the request as long as we have products ",
							"const products = pm.collectionVariables.get('products');",
							"// remove first product in list",
							"products.shift();",
							"// write to collection variable again",
							"pm.collectionVariables.set('products', products);",
							"// if there are products left in list call this request again",
							"if(products.length > 0){",
							"    pm.execution.setNextRequest(\"Get Single Product\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Get all products from previous request (/api/products)",
							"// by reading a collection variable set in that request",
							"const products = pm.collectionVariables.get('products');",
							"",
							"// If we have products set the id of the first product",
							"// as an environment varible (that we can access in the route using {{id}})",
							"if(products.length > 0){",
							"    pm.environment.set('id', products[0].id);",
							"}",
							"",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:5001/api/products/{{id}}",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "5001",
					"path": [
						"api",
						"products",
						"{{id}}"
					]
				}
			},
			"response": []
		},
